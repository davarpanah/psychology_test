@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(" سلام " + User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "مدیریت" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">خروج از سیستم</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav" style="font-weight:bold">
        <li>@Html.ActionLink("ورود کاربر", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
}
